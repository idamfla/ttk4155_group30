{
    "name": "AVR-GCC Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "github.copilot",
                "github.copilot-chat"
            ]
        }
    },
    "mounts": [
        "source=/dev,target=/dev,type=bind"
    ],
    "runArgs": [
        // "--device=/dev/bus/usb"
        "--privileged"
    ]
}